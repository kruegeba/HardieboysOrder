<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="1280px"
        android:layout_height="wrap_content"
        android:layout_marginRight="20px"
        android:id="@+id/itemListView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="Description"
        android:textStyle="bold"
        android:id="@+id/descriptionTextView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/itemListView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:textSize="30sp"
        android:text="Dry Ginger Beer"
        android:id="@+id/itemDescriptionTextView"
        android:layout_below="@+id/descriptionTextView"
        android:layout_toEndOf="@+id/itemListView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="Code"
        android:textStyle="bold"
        android:id="@+id/codeTextView"
        android:layout_below="@+id/itemDescriptionTextView"
        android:layout_toEndOf="@+id/itemListView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:textSize="30sp"
        android:text="DGB330"
        android:id="@+id/itemCodeTextView"
        android:layout_below="@+id/codeTextView"
        android:layout_toEndOf="@+id/itemListView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="Price"
        android:textStyle="bold"
        android:id="@+id/priceTextView"
        android:layout_below="@+id/itemCodeTextView"
        android:layout_toEndOf="@+id/itemListView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:textSize="30sp"
        android:text="$3.50"
        android:id="@+id/itemPriceTextView"
        android:layout_below="@+id/priceTextView"
        android:layout_alignStart="@+id/priceTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="Icon"
        android:textStyle="bold"
        android:id="@+id/iconTextView"
        android:layout_below="@+id/itemPriceTextView"
        android:layout_alignStart="@+id/itemPriceTextView" />

    <ImageButton
        android:layout_width="400px"
        android:layout_height="360px"
        android:layout_marginBottom="20px"
        android:clickable="false"
        android:id="@+id/iconImageButton"
        android:layout_below="@+id/iconTextView"
        android:layout_toEndOf="@+id/itemListView" />

</RelativeLayout>